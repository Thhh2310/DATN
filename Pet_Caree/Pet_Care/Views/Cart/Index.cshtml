@model List<Pet_Care.Models.Cart>

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">Giỏ hàng</h2>
    @if (Model.Count == 0)
    {
        <p class="text-danger">Giỏ hàng trống.</p>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm text-center">
            <thead class="table-dark">
                <tr>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.Image" class="img-thumbnail" style="width: 100px;"></td>
                        <td>@item.Name</td>
                        <td class="fw-bold text-success">@item.Price VNĐ</td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div class="text-center mt-3">
        <a class="btn btn-primary" href="javascript:history.back();">
            <i class="bi bi-arrow-left"></i> Tiếp tục mua sắm
        </a>

        <a class="btn btn-success ms-2" asp-controller="Orders" asp-action="Index">
            <i class="bi bi-bag-check"></i> Đặt ngay
        </a>
    </div>
</div>
