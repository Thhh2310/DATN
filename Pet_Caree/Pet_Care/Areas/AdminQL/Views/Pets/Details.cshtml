@model Pet_Care.Models.Pet

@{
    ViewData["Title"] = "Pet Details";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h2>Chi tiết thông tin thú cưng</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PetName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PetName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Age)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Weight)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Weight)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Color)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Color)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Notes)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Category)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryId)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Customer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.CustomerId)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.PetId" class="btn btn-warning px-4">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
        </div>
    </div>
</div>
