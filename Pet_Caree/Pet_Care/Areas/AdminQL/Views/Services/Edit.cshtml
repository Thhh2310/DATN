@model Pet_Care.Models.Service

@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Sửa dịch vụ</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ServiceId" />

                <div class="mb-3">
                    <label asp-for="CategoryServiceId" class="form-label fw-bold"></label>
                    <select asp-for="CategoryServiceId" class="form-control" asp-items="ViewBag.CategoryServiceId"></select>
                    <span asp-validation-for="CategoryServiceId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ServiceName" class="form-label fw-bold"></label>
                    <input asp-for="ServiceName" class="form-control"  />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-bold"></label>
                    <div class="d-flex align-items-end">
                        <img src="@Model.Image" alt="Image" class="img-thumbnail me-2" style="max-width: 100px; max-height: 100px;" />
                        <input asp-for="Image" class="form-control w-80" type="file" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OldPrice" class="form-label fw-bold"></label>
                    <input asp-for="OldPrice" class="form-control" />
                    <span asp-validation-for="OldPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <input asp-for="Status" class="form-control"  />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedDate" class="form-label fw-bold"></label>
                    <input asp-for="CreatedDate" class="form-control"  />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
