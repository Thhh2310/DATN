@model Pet_Care.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h2>Chi tiết thông tin đơn hàng</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.OrderDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Notes)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CustomerId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.FullName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PaymentMethodId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentMethod.MethodName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.StaffId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Staff.FullName)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-warning px-4">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
        </div>
    </div>
</div>
