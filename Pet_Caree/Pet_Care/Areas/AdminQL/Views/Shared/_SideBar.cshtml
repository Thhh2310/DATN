<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy giá trị menu đang mở từ LocalStorage
        let activeMenu = localStorage.getItem("activeMenu");
        let activeSubmenu = localStorage.getItem("activeSubmenu");

        // Nếu có menu đang mở, giữ nguyên trạng thái mở rộng
        if (activeMenu) {
            document.getElementById(activeMenu)?.classList.add("menu-open"); // Mở rộng menu cha
            document.getElementById(activeMenu)?.querySelector(".nav-link")?.classList.add("active"); // Đánh dấu menu cha
        }
        if (activeSubmenu) {
            document.getElementById(activeSubmenu)?.classList.add("active"); // Đánh dấu menu con
        }

        // Lắng nghe sự kiện click vào menu con
        document.querySelectorAll(".nav-treeview .nav-link").forEach(item => {
            item.addEventListener("click", function () {
                let parentMenu = this.closest(".nav-item").parentElement.closest(".nav-item");

                if (parentMenu) {
                    localStorage.setItem("activeMenu", parentMenu.id); // Lưu menu cha
                }
                localStorage.setItem("activeSubmenu", this.id); // Lưu menu con
            });
        });
    });
</script>
