@model Pet_Care.Models.Review

@{
    ViewData["Title"] = "Create Review";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create Review</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label fw-bold"></label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="ServiceId" class="form-label fw-bold"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label fw-bold"></label>
                    <input asp-for="Comment" class="form-control" placeholder="Enter your review comment" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Create</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
