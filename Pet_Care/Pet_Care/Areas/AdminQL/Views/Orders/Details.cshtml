@model Pet_Care.Models.Order

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h2>Order Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.OrderDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Notes)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Customer)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.CustomerId)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PaymentMethod)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentMethod.PaymentMethodId)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Staff)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Staff.StaffId)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.OrderId" class="btn btn-warning px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
