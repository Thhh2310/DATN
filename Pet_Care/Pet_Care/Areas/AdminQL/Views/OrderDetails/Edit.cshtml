@model Pet_Care.Models.OrderDetail

@{
    ViewData["Title"] = "Edit Order Detail";
    Layout = "~/Areas/AdminQL/Views/Shared/_Admins.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Edit Order Detail</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="OrderDetailId" />

                <div class="mb-3">
                    <label asp-for="OrderId" class="form-label fw-bold"></label>
                    <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ServiceId" class="form-label fw-bold"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PetId" class="form-label fw-bold"></label>
                    <select asp-for="PetId" class="form-control" asp-items="ViewBag.PetId"></select>
                    <span asp-validation-for="PetId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppointmentId" class="form-label fw-bold"></label>
                    <select asp-for="AppointmentId" class="form-control" asp-items="ViewBag.AppointmentId"></select>
                    <span asp-validation-for="AppointmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SizeId" class="form-label fw-bold"></label>
                    <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
                    <span asp-validation-for="SizeId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
